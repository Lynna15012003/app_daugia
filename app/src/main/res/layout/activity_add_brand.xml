<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AddBrand">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNamePageAdmin"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Thêm brand"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/black">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="IconHomeAdminOnclickListener"
            app:srcCompat="@drawable/baseline_home_34_white"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginRight="6dp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNamePro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNameBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bogoc"
            android:hint="Tên brand"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtImageBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bogoc"
            android:hint="Tên hình ảnh brand"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnAddBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bogocbutton"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="THÊM" />


</LinearLayout>